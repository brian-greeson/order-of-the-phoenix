<h1>Total Members: <%= @results.count %></h1>

<ul>

  <% @results.each do |member| %>
  <ul id=<%= "#{member[:name].delete(' ')}" %>>
    <h3>Name: <%= member[:name] %></h3>
    <% if member[:role] %>
      <li>Role: <%= member[:role] %></li>
    <% end %>
    <li>House: <%= member[:house] %></li>
    <% if  member[:patronus] %>
      <li>Patronus: <%= member[:patronus] %></li>
    <% end %>
  </ul>
  <% end %>
</ul>